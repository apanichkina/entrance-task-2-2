<fest:template xmlns:fest="http://fest.mail.ru">
    <fest:set name="card">
        <div class="card" name="{params.group}">
            <div class="card__content-top">
              <img class="card__icon" src="{params.img}"/>
            </div>
            <div class="card__content-bottom">
              <div class="ellipsis text__bold"><fest:value>params.title</fest:value></div>
              <fest:if test="params.subtitle">
                <div class="text__xs text__secondary"><fest:value>params.subtitle</fest:value></div>
              </fest:if>
            </div>
        </div>
    </fest:set>
</fest:template>

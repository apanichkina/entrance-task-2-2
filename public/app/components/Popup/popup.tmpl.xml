<fest:template xmlns:fest="http://fest.mail.ru" context_name="params">
  <div class="popup">
    <div class="popup__content">
      <div>
        <div class="popup__title text__l text__bold">
          <fest:value>params.title</fest:value>
        </div>
        <div class="popup__subtitle text__xs">
          <fest:value>params.subtitle</fest:value>
        </div>
        <div class="popup__actions"></div>
      </div>


      <div class="popup__controller"></div>
    </div>
    <fest:if test="params.confirm &amp;&amp; params.cancel">
      <div class="popup__button__container">
        <button class="button button_confirm button_accent text__bold text__l">
          <fest:value>params.confirm</fest:value>
        </button>
        <div class="button_space"></div>
        <button class="button button_cancel text__bold text__l js-button-close">
          <fest:value>params.cancel</fest:value>
        </button>
      </div>
    </fest:if>
  </div>
</fest:template>

<fest:template xmlns:fest="http://fest.mail.ru" context_name="params">
  <fest:set name="radio">
    <input type="radio" id="{params.id}" name="{params.name}" value="{params.value}" onClick="{params.onClick}"/>
    <label for="{params.id}" class="text__s text__bold"><fest:value>params.label</fest:value></label>
  </fest:set>
</fest:template>
